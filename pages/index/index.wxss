.page-index-container .article-list .article-item {
  padding: 36rpx 48rpx;
}
.page-index-container .article-list .article-item .title .column {
  font-size: 24rpx;
  color: #b71ed7;
  font-weight: normal;
}
.page-index-container .article-list .article-item .title .column::after {
  content: "\B7";
  margin: 0.4em;
  color: #b2bac2;
}
.page-index-container .article-list .article-item .title .username {
  font-size: 24rpx;
  color: #b2bac2;
  font-weight: normal;
}
.page-index-container .article-list .article-item .content {
  margin: 12rpx 0 24rpx;
  font-size: 28rpx;
  color: #2e3135;
  font-weight: normal;
  display: block;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.page-index-container .article-list .article-item .status {
  font-size: 24rpx;
  color: #b2bac2;
  font-weight: normal;
}
.page-index-container .article-list .article-item .status .collection {
  padding: 10rpx 18rpx;
  height: 36rpx;
  border: 1rpx solid #b2bac2;
}
.page-index-container .article-list .article-item .status .comments {
  padding: 10rpx 18rpx;
  border: 1rpx solid #b2bac2;
  border-left: none;
}
.page-index-container .article-list .article-item .status .iconfont {
  font-size: 24rpx;
  color: #b2bac2;
}
.page-index-container .article-list .article-item ~ .article-item {
  position: relative;
}
.page-index-container .article-list .article-item ~ .article-item::before {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 1rpx;
  background-color: #f5f5f5;
  transform: scaleY(0.5);
}
